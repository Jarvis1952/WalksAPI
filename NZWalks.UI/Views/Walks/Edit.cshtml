@model NZWalks.UI.Models.DTO.WalksDTO

<h1 class="mt-3">Edit Walk</h1>

@if (Model is not null)
{
    <form method="post">
        <input type="hidden" class="form-control" asp-for="DifficultyId"  />
        <input type="hidden" class="form-control" asp-for="RegionId"  />


        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>

        <div class="mt-3">
            <label class="form-label">Length (Km)</label>
            <input type="text" class="form-control" asp-for="LengthInKm" />
        </div>

        <div class="mt-3">
            <label class="form-label">Image URL</label>
            <input type="text" class="form-control" asp-for="WalkImageUrl" />
        </div>

        <div class="mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" asp-controller="Walks"
                    asp-action="Delete"
                    class="btn btn-danger">
                Delete
            </button>
        </div>

    </form>
}