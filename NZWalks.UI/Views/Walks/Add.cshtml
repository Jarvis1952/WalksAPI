@model NZWalks.UI.Models.AddWalksViewModel

<h1 class="mt-3"> Add Walks</h1>


<form method="post" class="mt-3">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>

    <div class="mt-3">
        <label class="form-label">Length(Km)</label>
        <input type="number" class="form-control" asp-for="LengthInKm" />
    </div>
    
    <div class="mt-3">
        <label class="form-label">Image Url</label>
        <input type="text" class="form-control" asp-for="WalkImageUrl" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-secondary">Save</button>
    </div>

</form>