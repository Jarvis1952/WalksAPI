@model IEnumerable<NZWalks.UI.Models.DTO.WalksDTO>

<h1 class="mt-3"> Walks </h1>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-secondary" asp-controller="Walks" asp-action="Add"> Add Walks </a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Length(Km)</th>
            <th>Walk Image Url</th>
            <th> </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var walk in Model)
        {
            <tr>
                <td>@walk.Name</td>
                <td>@walk.Description</td>
                <td>@walk.LengthInKm</td>
                <td>@walk.WalkImageUrl</td>
                <td>
                    <a asp-controller="Walks" asp-action="Edit" asp-route-id="@walk.Id"
                       class="btn btn-secondary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>